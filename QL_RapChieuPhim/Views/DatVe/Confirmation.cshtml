@model IEnumerable<QL_RapChieuPhim.Models.Ve>
@{
    ViewBag.Title = "Xác nhận đặt vé";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Xác nhận đặt vé</h2>

@if (!Model.Any())
{
    <p>Không tìm thấy vé đặt.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Số ghế</th>
                <th>Suất chiếu</th>
                <th>Giá</th>
                <th>Ngày đặt vé</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Ghe?.SoGhe</td>
                    <td>@ticket.SuatChieu?.NgayChieu</td>
                    <td>@ticket.Gia</td>
                    <td>@ticket.NgayDatVe</td>
                </tr>
            }
        </tbody>
    </table>
    <p>Cảm ơn bạn đã đặt vé tại hệ thống của chúng tôi!</p>
}
