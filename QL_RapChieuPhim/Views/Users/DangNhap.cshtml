@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/cssDangNhap.css">

<form action="/Users/DangNhap" method="post">
    <div class="imgcontainer">
        <img style="height: 190px; width: 190px" src="~/Images/dangnhap.jpg" alt="Avatar" class="avatar">
    </div>

    <div class="container">
        <label for="uname"><b>Email</b></label>
        @Html.TextBox("Email")
        <p style="color: red">@ViewData["Loi2"]</p>
        <label for="psw"><b>Mật khẩu</b></label>
        @Html.Password("MatKhau")
        <p style="color: red">@ViewData["Loi5"]</p>
    </div>

    <p style="color: red">@ViewBag.ThongBao</p>
    <div class="button-container">
        <!-- Nút Quên mật khẩu -->
        <a href="/Users/DoiMatKhau" class="forgot-password-link">
            <button type="button" class="forgot-password-button button-width">Quên mật khẩu?</button>
        </a>
        <!-- Nút Đăng nhập -->
        <button type="submit" name="Đăng Nhập" class="login-button button-width">Đăng nhập</button>
    </div>
</form>